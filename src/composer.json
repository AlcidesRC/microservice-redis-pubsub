{
    "name": "alcidesrc/microservice-redis-pubsub",
    "description": "Dockerized microservice that fires events based on Redis PUB/SUB implementation.",
    "keywords": [
        "php",
        "predis",
        "monolog",
        "redis",
        "pubsub",
        "domain events",
        "docker",
        "microservice",
        "supervisor"
    ],
    "type": "project",
    "require": {
        "php": "^8.0",
        "alcidesrc/php-redis-pubsub": "^1.0",
        "monolog/monolog": "^2.2",
        "predis/predis": "^1.1",
        "ramsey/uuid": "^4.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.82",
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "^9.5",
        "codedungeon/phpunit-result-printer": "^0.30.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.0.3"
        },
        "sort-packages": true
    }
}
