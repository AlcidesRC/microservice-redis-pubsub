#-----------------------------------------------------------------
# CONSTANTS
#-----------------------------------------------------------------

SELF_DIR := $(dir $(lastword $(MAKEFILE_LIST)))

#-----------------------------------------------------------------
# TARGETS
#-----------------------------------------------------------------

-include $(SELF_DIR)/mk/default.mk

#-----------------------------------------------------------------
# TARGETS
#-----------------------------------------------------------------

build: ## Builds the image
	@echo "┌─────────────────────────────────────────────────────────────────────────────┐"
	@echo "│ BUILDING THE DOCKER IMAGE                                                   │"
	@echo "└─────────────────────────────────────────────────────────────────────────────┘"
	@echo ""
	@docker build --target standalone --tag standalone:latest .
	@echo ""
	@echo " 📦  ${GREEN}Build done!${RESET}"
	@echo ""
